<% content_for :page_title do %>
  <h2>Edit Appointment for <%= @patient.ident %></h2>
<% end %>

<%= form_for([@patient, @appointment], html: { class: 'form-horizontal' }) do |f| %>
  <%= errors_in @appointment %>
  <%= render partial: 'appointments/form', locals: { f: f }  %>
  <hr/>
  <div class="control-group">
    <div class="controls">
      <%= f.submit %> 
      <%= link_to 'Show', [@patient, @appointment] %>
      <%= link_to 'Back', patient_appointments_path(@patient) %>
    </div>
  </div>
<% end %>
