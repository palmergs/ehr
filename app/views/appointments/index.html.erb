<h1>Listing appointments</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Patient</th>
      <th>Appointment type</th>
      <th>Start at</th>
      <th>End at</th>
      <th>Canceled at</th>
      <th>Notes</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @presenter.each do |appointment| %>
      <tr>
        <td><%= appointment.user_id %></td>
        <td><%= appointment.patient_id %></td>
        <td><%= appointment.appointment_type %></td>
        <td><%= appointment.start_at %></td>
        <td><%= appointment.end_at %></td>
        <td><%= appointment.canceled_at %></td>
        <td><%= appointment.notes %></td>
        <td><%= link_to 'Show', [@patient, appointment] %></td>
        <td><%= link_to 'Edit', edit_patient_appointment_path(@patient, appointment) %></td>
        <td><%= link_to 'Destroy', [@patient, appointment], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Appointment', new_patient_appointment_path(@patient) %>
