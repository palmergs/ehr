<% if defined? patients and patients %>
  <% if patients.count > 0 %>
    <table class="table">
      <thead>
        <tr>
          <th>Ident</th>
          <th>Name</th>
          <th>&nbsp;</th>
          <th>DOB</th>
          <th>Last</th>
          <th>Scheduled</th>
        </tr>
      </thead>
      <tfoot>
        <tr>
          <td colspan="6"><%= paginate patients.collection %></td>
        </tr>
      </tfoot>
      <tbody>
        <% patients.each do |p| %>
          <tr>
            <td><%= link_to p.ident, patient_path(p) %></td>
            <td><%= p.name %></td>
            <td><%= gender_icon p.gender %></td>
            <td><%= p.dob_str %></td>
            <td><%= appointment(p.last_interaction, false) %></td>
            <td><%= appointment(p.next_appointment, false) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="info">No patients were found with the current search criteria.</p>
  <% end %>
<% end %>
