<% content_for :page_title do %>
  <h2>Edit Medication Change for <%= @patient.ident %> on <%=on_dt @appointment.start_at %></h2>
<% end %>

<%= form_for([@patient, @appointment, @prescription], 
             html: { class: 'form-horizontal' }) do |f| %>
  <%= errors_in(@prescription) %>
  <%= render partial: 'prescriptions/form', locals: { f: f }  %>
  <hr/>
  <div class="control-group">
    <div class="controls">
      <%= f.submit %>
      <%= link_to 'Show', 
          [@patient, @appointment, @prescription] %> |
      <%= link_to 'Back', 
          patient_appointment_prescriptions_path(@patient, @appointment) %>
    </div>
  </div>
<% end %>
