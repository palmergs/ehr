<% content_for :page_title do %>
  <h2>Edit Progress Note for <%= @patient.ident %></h2>
<% end %>

<%= form_for([@patient, @appointment, @progress_note], 
             html: { class: 'form-horizontal' }) do |f| %>
  <%= errors_in @progress_note %>
  <%= render partial: 'progress_notes/form', locals: { f: f }  %>
  <hr/>
  <div class="control-group">
    <div class="controls">
      <%= f.submit %>
      <%= link_to 'Show', [@patient, @appointment, @progress_note] %> |
      <%= link_to 'Back', patient_appointment_progress_notes_path(@patient, @appointment) %>
    </div>
  </div>
<% end %>
