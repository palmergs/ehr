<% content_for :page_title do %>
  <h2>Edit Initial Evaluation for <%= @patient.ident %></h2>
<% end %>

<%= form_for([@patient, @appointment, @initial_evaluation], 
             html: { class: 'form-horizontal' }) do |f| %>
  <%= errors_in @initial_evaluation %>
  <%= render partial: 'initial_evaluations/form', locals: { f: f }  %>
  <hr/>
  <div class="control-group">
    <div class="controls">
      <%= f.submit %>
      <%= link_to 'Back', patient_appointment_path(@patient, @appointment) %>
    </div>
  </div>
<% end %>
