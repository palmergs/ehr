<% content_for :page_title do %>
  <h2>New Address for <%= @patient.ident %></h2>
<% end %>

<%= form_for([@patient, @address], html: { class: 'form-horizontal' }) do |f| %>
  <%= errors_in @address %>
  <%= render partial: 'addresses/form', locals: { f: f } %>
  <hr/>
  <div class="control-group">
    <div class="controls">
      <%= f.submit %>
      <%= link_to 'Back', @patient %>
    </div>
  </div>
<% end %>
